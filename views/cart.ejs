<%- include('./partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="bg-fuchsia-100">
    <div class="cart-container max-w-6xl mx-auto my-8 p-6 bg-white rounded-lg shadow-lg bg-fuchsia-300	">
        <% if (user && user.cart && user.cart.length > 0) { %>
            <% user.cart.forEach(product => { %>
                <div class="cart-item flex items-center justify-between p-4 border-b border-gray-200 hover:bg-gray-50 transition">
                    <!-- Product Image -->
                    <div class="product-image w-50 h-32 bg-gray-100 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    
                    <!-- Product Details -->
                    <div class="product-details flex-1 ml-6">
                        <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                        <p class="text-sm text-gray-600">Price: $<%= product.price %></p>
                    </div>
                    
                    <!-- Cart Actions (Optional) -->
                    <div class="cart-actions flex items-center space-x-4">
                        <!-- Example: Remove button (add functionality as needed) -->
                        <button class="text-red-500 hover:text-red-700">Remove</button>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center text-xl text-gray-600">Your cart is empty.</p>
        <% } %>
    </div>
    
    
    
</body>
</html>