<%- include('./partials/header') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-green-500 font-sans antialiased">
    <% if (error.length > 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 rounded-md bg-red-500 p-3 shadow-lg">
            <span class="text-white font-semibold text-lg">
                <%= error %>
            </span>
        </div>
    <% } %>

    <!-- Upper Section: Welcome Text -->
    <div class="upper h-screen flex flex-col items-center justify-center bg-green-400">
        <div class="w-full sm:w-1/2 md:w-1/3 bg-blue-300 flex items-center justify-center rounded-lg p-8 shadow-lg">
            <h1 class="text-4xl md:text-5xl font-bold text-center text-white">
                Welcome to the Page
            </h1>
        </div>

        <!-- Sign-Up Form -->
        <div class="mt-8 w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-5 bg-white rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-center text-blue-600">Sign Up</h2>
            <form action="/users/register" method="post" class="space-y-4 mt-6">
                <input type="text" placeholder="Name" name="name" class="w-full rounded-lg p-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="email" placeholder="Email" name="email" class="w-full rounded-lg p-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="password" placeholder="Password" name="password" class="w-full rounded-lg p-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="submit" value="Create Your Account" name="create" class="w-full bg-yellow-500 hover:bg-blue-500 text-white rounded-lg p-3 transition-colors duration-300">
            </form>
        </div>

        <!-- Login Form -->
        <div class="mt-8 w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-5 bg-white rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-center text-blue-600">Log In</h2>
            <form action="/users/login" method="post" class="space-y-4 mt-6">
                <input type="email" placeholder="Email" name="email" class="w-full rounded-lg p-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="password" placeholder="Password" name="password" class="w-full rounded-lg p-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <input type="submit" value="Log In" name="Create" class="w-full bg-yellow-500 hover:bg-blue-500 text-white rounded-lg p-3 transition-colors duration-300">
            </form>
        </div>
    </div>
</body>



        </div>
    </div>
</body>

</html>